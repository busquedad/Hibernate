<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.connection.url">jdbc:h2:file:/app/data/pizzamdp</property>
    <!--
      Las credenciales de la base de datos no deben estar codificadas en el c贸digo fuente.
      Se recomienda utilizar variables de entorno o un sistema de gesti贸n de secretos para la configuraci贸n en producci贸n.
      Por ejemplo:
      <property name="hibernate.connection.username">${env.DB_USER}</property>
      <property name="hibernate.connection.password">${env.DB_PASSWORD}</property>
    -->
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password"></property>
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">false</property>
    <property name="format_sql">false</property>
    <mapping resource="entidades/TipoPizza.hbm.xml"/>
    <mapping resource="entidades/TamanioPizza.hbm.xml"/>
    <mapping resource="entidades/VariedadPizza.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
